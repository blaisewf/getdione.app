---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Join Beta | Dione - Install Open-Source AI Apps in 1 Click">
  <main
    class="min-h-screen flex flex-col items-center justify-center px-4 sm:px-8"
  >
    <div
      class="fixed inset-0 flex justify-center items-center"
      aria-hidden="true"
    >
      <div class="bg-[#BCB1E7]/30 h-[70vh] w-[70vh] rounded-full blur-[150px]">
      </div>
    </div>

    <div class="relative text-center max-w-xl">
      <h1
        class="text-4xl sm:text-5xl font-bold text-white tracking-tighter mb-6"
      >
        Thank You!
      </h1>
      <p class="text-lg sm:text-xl text-white/80 mb-8">
        Your beta registration has been received. We'll be in touch soon with
        next steps.
      </p>
      <a
        href="/"
        class="inline-flex items-center justify-center h-11 sm:h-12 px-6 sm:px-8 font-medium text-white bg-white/10 backdrop-blur border border-white/10 rounded-full hover:bg-white/20 hover:scale-105 active:scale-95 transition-all duration-300"
      >
        Return Home
      </a>
    </div>
  </main>
</Layout>
