---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
  <div
    class="flex flex-col items-center w-full min-h-[100dvh] justify-center p-12 pt-6 relative"
  >
    {/* background elements */}
    <div
      class="fixed inset-0 flex justify-center items-center"
      aria-hidden="true"
    >
      <div class="bg-[#BCB1E7]/30 h-[70vh] w-[70vh] rounded-full blur-[150px]">
      </div>
    </div>

    <div class="text-center z-5">
      <h2
        class="text-4xl font-semibold text-white tracking-tighter text-balance text-center"
      >
        Page not found
      </h2>
      <p class="text-white/70 mt-4 mb-4 max-w-md text-balance">
        The page you're looking for doesn't exist or has been moved to another
        location.
      </p>

      <div class="flex w-full mb-4 justify-center">
        <a
          href="/"
          rel="noopener noreferrer"
          class="shrink-0 h-11 sm:h-12 px-8 sm:px-10 flex items-center justify-center bg-white/10 backdrop-blur border border-white/10 text-white font-semibold rounded-full hover:bg-white/20 hover:scale-105 active:scale-95 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-white/50 shadow-lg"
          aria-label="Back to home"
        >
          Back to home
        </a>
      </div>
    </div>
  </div>

  <style>
    @keyframes float {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    .animate-float {
      animation: float 3s ease-in-out infinite;
    }

    @keyframes fade-in {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in {
      animation: fade-in 0.6s ease-out;
    }
  </style>

  <script>
    if (window.location.pathname.startsWith("/docs")) {
      window.location.href = "/docs/";
    }
  </script>
</Layout>
